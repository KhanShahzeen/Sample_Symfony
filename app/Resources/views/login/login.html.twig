{% block title %}Office Login{% endblock %}

{% block body %}

    <div class="limiter">
        <div class="container-login100" style="background-image: url({{ asset('images/office.jpeg') }});">
            <div class="wrap-login100">
                <h1 id="log">Login</h1>
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    {{ form_start(loginform) }}
                        {{form_row(loginform.user,{
                            'id' : 'user'
                        })}}
                        {{form_row(loginform.password,{
                            'id' : 'pass'
                        })}}
                        <button type="submit" class="btn btn-success">Login<span class="fa fa-leaf"></span></button>
                {{ form_end(loginform) }}
            </div>
        </div>
    </div>

{% endblock %}


